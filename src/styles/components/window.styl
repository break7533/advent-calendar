.c-window
  relative()
  cursor                  pointer
  height                  100%
  outline                 1px dashed rgba($white, 0.5)
  position                relative
  width                   100%
  z-index                 1

  &__content
    background-color      rgba($red--medium, 0.3)
    background-position   center center
    background-size       cover
    box-shadow            inset 0 0 10px rgba(0, 0, 0, 0.5)
    height                100%
    perspective           800px
    transition            all 0.4s ease-in-out
    width                 100%

    svg
      max-height          100%
      max-width           100%

  &__cover
    absolute()
    height                100%
    left                  0
    transform-origin      100% 40%
    transform-style       preserve-3d
    top                   0
    transition            transform 0.3s ease-in-out, opacity 0.3s ease-out
    width                 100%

    &__front,
    &__back
      absolute()
      background          $red--medium
      backface-visibility hidden
      display             block
      height              100%
      opacity             1
      width               100%

    &__back
      transform           rotate3d(0, 1, 0, 180deg)

    &__content
      absolute()
      color               white
      font-size           4.5rem
      font-weight         600
      letter-spacing      -0.05em
      opacity             0.5
      pointer-events      none
      text-align          center
      top                 50%
      transform           translateY(-50%)
      width               100%

  &.is-open
    z-index               2

    .c-window__cover
      opacity             0
      transform           rotate3d(0, 1, 0, 150deg)
      transition          0.3s transform ease-in-out, 0.4s 0.1s opacity ease-out

    .c-window__cover__front,
    .c-window__cover__back
      opacity             0
      transition          0.4s 0.4s all ease-in