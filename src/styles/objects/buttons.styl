// @name Button
// @description Standard button.
// @state :hover - highlights when hovered
// @state :disabled - dims the button when disabled.
// @markup
// <button class="o-button">click me</button>
.o-button
	relative()
	border						none
	cursor						pointer
	display						inline-block
	font-family				$body-font
	font-size					0.75rem
	font-weight				400
	padding						0.2 * $base-spacing-unit 1.25em
	text-align				center
	text-decoration		none
	text-shadow				none
	transition				$fast-transition

	+bp($screen-lg-min)
		padding					0.3 * $base-spacing-unit 2.5em

	&:disabled,
	&[disabled],
	&.is-disabled
		cursor					not-allowed
		opacity					0.5

	&--ghost
		background			none
		border					1px solid $white
		border-radius 	0.3rem
		color 					$white
		font-size 			0.75rem
		font-weight 		600
		opacity 				0.5
		text-transform 	uppercase

		+bp($screen-xs-min)
			font-size 		0.6rem

		+ActiveFocusHover()
			background 		$white
			color 				$grey--dark
			opacity 			1
			outline 			none